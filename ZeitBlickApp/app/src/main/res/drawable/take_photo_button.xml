<?xml version="1.0" encoding="utf-8"?>

<!-- Define the button to take a picture, it is a gray circle surrounded
 with a white bordure. The size of this button is defined in take_photo_framelayout-->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- white bordure -->
    <item>
        <shape android:shape="oval">
            <solid android:color="@android:color/transparent" />

            <!-- define the empty space between bordure and inner circle-->
            <padding
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                android:top="10dp" />

            <!-- define width of the bordure -->
            <stroke
                android:width="5dp"
                android:color="@color/borderColor" />
        </shape>
    </item>

    <!-- inner gray circle -->
    <item>
        <shape android:shape="oval">
            <solid android:color="@android:color/darker_gray" />
        </shape>
    </item>
</layer-list>