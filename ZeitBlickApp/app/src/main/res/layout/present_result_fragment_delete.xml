<?xml version="1.0" encoding="utf-8"?>

<!-- //todo ce fragment devrait etre en immersive mode avec un burger menu/navigation drawer -->

<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#939072">

    <!-- All matching photo from Mkg-->
    <ImageView
        android:layout_width="254dp"
        android:layout_height="239dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/iv_matching_mkg_photo"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/frameLayout"
        android:layout_marginBottom="128dp"
        android:background="@color/colorPrimaryDark"/>


    <!-- Thumbnail from taken photo
    //todo thumbnail de la photo prise, doit etre rond avec brodure blanche-->
    <ImageView
        android:layout_width="73dp"
        android:layout_height="62dp"
        app:srcCompat="@drawable/circledimageview"
        android:id="@+id/iv_thumbnail_taken_photo"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.95"
        android:layout_marginTop="64dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/frameLayout"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.0"
        android:src="@drawable/circled_photo_thumbnail"/>

    <!-- //todo Text gros -->
    <TextView
        android:text="TextView"
        android:layout_width="102dp"
        android:layout_height="50dp"
        android:id="@+id/textView"
        android:textColor="@color/textColor"
        android:textStyle="italic"
        android:textSize="@dimen/text_result_fragment"
        app:layout_constraintBottom_toTopOf="@+id/iv_matching_mkg_photo"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.32999998" />


    <FrameLayout
        android:layout_width="384dp"
        android:layout_height="100dp"
        tools:layout_editor_absoluteX="0dp"
        android:background="#686550"
        android:id="@+id/frameLayout"
        tools:ignore="MissingConstraints"
        android:layout_marginTop="456dp"
        app:layout_constraintTop_toTopOf="parent">

    </FrameLayout>

    <EditText
        android:inputType="textMultiLine"
        android:layout_width="275dp"
        android:layout_height="130dp"
        android:id="@+id/tv_result_cloud"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/frameLayout"
        android:background="@color/textColor"
        android:textColor="@color/colorAccent"
        android:layout_marginBottom="48dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/iv_matching_mkg_photo"
        app:layout_constraintVertical_bias="0.95"
        android:textSize="12sp"/>


</android.support.constraint.ConstraintLayout>