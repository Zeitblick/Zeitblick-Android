<?xml version="1.0" encoding="utf-8"?>

<!-- //todo ce fragment devrait etre en immersive mode -->

<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextureView
        android:id="@+id/tv_take_photo"
        android:layout_width="380dp"
        android:layout_height="511dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="2dp" />

    <Button
        android:id="@+id/bt_take_photo"
        android:layout_width="wrap_content"
        android:layout_height="52dp"
        android:background="@drawable/circled_photo_thumbnail"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_gravity="center"
        android:text="@string/take_photo_take_photo"
        android:textColor="@color/textColor"
        app:layout_constraintBottom_toBottomOf="@+id/tv_take_photo"
        tools:layout_editor_absoluteX="148dp"
        android:layout_marginBottom="64dp"
        app:layout_constraintTop_toTopOf="@+id/tv_take_photo"
        app:layout_constraintVertical_bias="1.0" />

    <ImageButton
        android:id="@+id/ibtt_switch_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/textColor"
        app:srcCompat="@android:drawable/ic_menu_always_landscape_portrait"
        android:layout_gravity="center_vertical"
        tools:layout_editor_absoluteY="511dp"
        app:layout_constraintRight_toLeftOf="@+id/bt_take_photo"
        android:layout_marginEnd="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/tv_take_photo" />


</android.support.constraint.ConstraintLayout>